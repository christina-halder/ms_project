<% recipe = contentful.entry(params[:id]) %>


<div class="container">
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="col-md-6">

          <div class="tab-content">
            <div class="tab-pane active details-image" id="pic-1"><img src="https:<%= recipe.photo.url %>" height="300"/></div>
          </div>

        </div>
        <div class="details col-md-6">
          <h3 class="product-title"><%= recipe.title %></h3>
          <p class="product-description"><%= recipe.description %></p>

          <h5 class="colors">Chef Name: <%= recipe.fields[:chef].present? ? recipe.chef.name : 'N/A' %></h5>
          <h5 class="colors"> Tags: <small><%= recipe.fields[:tags].present? ? recipe.tags.map(&:name).join(', ') : 'No tags found' %></small> </h5>
        </div>
      </div>
    </div>
  </div>
</div>
